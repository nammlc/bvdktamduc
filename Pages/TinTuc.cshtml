@page
@model BVTamDuc.Pages.TinTucModel
@{
    ViewData["Title"] = "Tin tức";
}



<!-- Ô tìm kiếm -->
<div class="" style="display: flex; justify-content: space-between;">
    <h2 class="main-title">Các bài viết mới</h2>
    <form method="get" class="mb-4">
    <div class="d-flex justify-content-end">
        <div >
            <div class="input-group">
                <input type="text" name="SearchTerm" value="@Model.SearchTerm" class="form-control" placeholder="Tìm kiếm bài viết...">
                <button class="btn btn-primary" type="submit">Tìm</button>
            </div>
        </div>
    </div>
    </form>
</div>


<!-- Danh sách bài viết -->
<div class="row g-4">
    @foreach (var baiViet in Model.BaiVietList)
    {
        <div class="col-md-4">
            <a href="/ChiTietBaiViet?id=@baiViet.id" class="text-decoration-none">
                <div class="news-card shadow-sm" style="height: 300px;">
                    <img src="@baiViet.anh_dai_dien" alt="@baiViet.tieu_de"
                         style="height: 210px; width: 100%; object-fit: cover; border-top-left-radius: 10px; border-top-right-radius: 10px;">
                    <div class="card-body">
                        <h5 class="card-title">@baiViet.tieu_de</h5>
                        <small class="text-muted">@baiViet.ngay_dang.ToString("dd/MM/yyyy")</small>
                    </div>
                </div>
            </a>
        </div>
    }
</div>

<!-- Phân trang -->
@if (Model.TotalPages > 1)
{
    <div class="mt-4">
        <ul class="pagination justify-content-center">
            @for (int i = 1; i <= Model.TotalPages; i++)
            {
                <li class="page-item @(i == Model.Page ? "active" : "")">
                    <a class="page-link" href="?page=@i">@i</a>
                </li>
            }
        </ul>
    </div>
}